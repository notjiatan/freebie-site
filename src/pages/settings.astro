---
import BaseLayout from "@components/base/BaseLayout.astro";
import Button from "@components/common/Button.astro";
---

<BaseLayout title="Settings - Freebie Finders">
  <!-- Settings Header -->
  <section class="section pt-20">
    <div class="container">
      <div class="row">
        <div class="col-12">
          <div class="text-center mb-8">
            <h1 class="mb-4 neon-title flicker-text">Settings</h1>
            <p class="neon-subtitle">Manage your account preferences</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Settings Content -->
  <section class="section">
    <div class="container">
      <div class="row justify-center">
        <div class="col-12 lg:col-8">
          
          <!-- Profile Settings -->
          <div class="glass rounded-lg p-8 mb-8">
            <h2 class="text-h4 font-bold text-txt-p dark:text-darkmode-txt-p mb-6">Profile Settings</h2>
            <div class="space-y-6">
              <div class="flex items-center justify-between">
                <div>
                  <h3 class="font-semibold text-txt-p dark:text-darkmode-txt-p">Email Address</h3>
                  <p class="text-sm text-txt-light dark:text-darkmode-txt-light">test@test.com</p>
                </div>
                <Button
                  label="Reset Email"
                  link="/reset-email"
                  type="secondary"
                  glass={true}
                />
              </div>
            </div>
          </div>


          <!-- Navigation -->
          <div class="text-center">
            <Button
              label="Back to Dashboard"
              link="/dashboard"
              type="secondary"
              glass={true}
            />
          </div>

        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<script>
  // Form submission handlers
  const profileForm = document.querySelector('form');
  profileForm?.addEventListener('submit', (e) => {
    e.preventDefault();
    alert('Profile updated successfully! (This is a demo)');
  });

</script>

<style>
  /* Custom focus states for inputs */
  input:focus {
    box-shadow: 0 0 0 2px rgba(147, 51, 234, 0.5);
  }
  
  /* Toggle switch styling */
  .peer:checked ~ div {
    background-color: #9333ea;
  }
  
  /* Hover effects for glass panels */
  .glass:hover {
    transform: translateY(-2px);
    transition: all 0.3s ease;
  }
</style>