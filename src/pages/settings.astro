---
import BaseLayout from "@components/base/BaseLayout.astro";
import Button from "@components/common/Button.astro";
---

<BaseLayout title="Settings - Freebie Finders">
  <!-- Settings Header -->
  <section class="section pt-20">
    <div class="container">
      <div class="row">
        <div class="col-12">
          <div class="text-center mb-8">
            <h1 class="mb-4 neon-title flicker-text">Settings</h1>
            <p class="neon-subtitle">Manage your account preferences</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Settings Content -->
  <section class="section">
    <div class="container">
      <div class="row justify-center">
        <div class="col-12 lg:col-8">
          
          <!-- Profile Settings -->
          <div class="glass rounded-lg p-8 mb-8">
            <h2 class="text-h4 font-bold text-txt-p dark:text-darkmode-txt-p mb-6">Profile Settings</h2>
            <div class="space-y-6">
              <div class="flex items-center justify-between">
                <div>
                  <h3 class="font-semibold text-txt-p dark:text-darkmode-txt-p">Email Address</h3>
                  <p class="text-sm text-txt-light dark:text-darkmode-txt-light">test@test.com</p>
                </div>
                <Button
                  label="Reset Email"
                  link="/reset-email"
                  type="secondary"
                  glass={true}
                />
              </div>
            </div>
          </div>

          <!-- Notification Settings -->
          <div class="glass rounded-lg p-8 mb-8">
            <h2 class="text-h4 font-bold text-txt-p dark:text-darkmode-txt-p mb-6">Notifications</h2>
            <div class="space-y-6">
              <div class="flex items-center justify-between">
                <div>
                  <h3 class="font-semibold text-txt-p dark:text-darkmode-txt-p">Email Notifications</h3>
                  <p class="text-sm text-txt-light dark:text-darkmode-txt-light">Receive notifications about new freebies</p>
                </div>
                <label class="relative inline-flex items-center cursor-pointer">
                  <input type="checkbox" checked class="sr-only peer">
                  <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-purple-300 dark:peer-focus:ring-purple-800 rounded-full peer dark:bg-gray-700 peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all dark:border-gray-600 peer-checked:bg-purple-600"></div>
                </label>
              </div>

              <div class="flex items-center justify-between">
                <div>
                  <h3 class="font-semibold text-txt-p dark:text-darkmode-txt-p">Weekly Summary</h3>
                  <p class="text-sm text-txt-light dark:text-darkmode-txt-light">Get a weekly recap of discovered freebies</p>
                </div>
                <label class="relative inline-flex items-center cursor-pointer">
                  <input type="checkbox" class="sr-only peer">
                  <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-purple-300 dark:peer-focus:ring-purple-800 rounded-full peer dark:bg-gray-700 peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all dark:border-gray-600 peer-checked:bg-purple-600"></div>
                </label>
              </div>

              <div class="flex items-center justify-between">
                <div>
                  <h3 class="font-semibold text-txt-p dark:text-darkmode-txt-p">Marketing Emails</h3>
                  <p class="text-sm text-txt-light dark:text-darkmode-txt-light">Promotional content and special offers</p>
                </div>
                <label class="relative inline-flex items-center cursor-pointer">
                  <input type="checkbox" class="sr-only peer">
                  <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-purple-300 dark:peer-focus:ring-purple-800 rounded-full peer dark:bg-gray-700 peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all dark:border-gray-600 peer-checked:bg-purple-600"></div>
                </label>
              </div>
            </div>
          </div>

          <!-- Privacy Settings -->
          <div class="glass rounded-lg p-8 mb-8">
            <h2 class="text-h4 font-bold text-txt-p dark:text-darkmode-txt-p mb-6">Privacy & Security</h2>
            <div class="space-y-6">
              <div>
                <h3 class="font-semibold text-txt-p dark:text-darkmode-txt-p mb-2">Change Password</h3>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                  <div>
                    <label for="currentPassword" class="block text-sm font-medium text-txt-p dark:text-darkmode-txt-p mb-2">Current Password</label>
                    <input 
                      type="password" 
                      id="currentPassword" 
                      name="currentPassword" 
                      class="w-full px-4 py-3 rounded-md glass-t border-0 focus:ring-2 focus:ring-purple-500 focus:outline-none text-txt-p dark:text-darkmode-txt-p placeholder-txt-light dark:placeholder-darkmode-txt-light transition-all duration-300"
                      placeholder="Enter current password"
                    >
                  </div>
                  <div>
                    <label for="newPassword" class="block text-sm font-medium text-txt-p dark:text-darkmode-txt-p mb-2">New Password</label>
                    <input 
                      type="password" 
                      id="newPassword" 
                      name="newPassword" 
                      class="w-full px-4 py-3 rounded-md glass-t border-0 focus:ring-2 focus:ring-purple-500 focus:outline-none text-txt-p dark:text-darkmode-txt-p placeholder-txt-light dark:placeholder-darkmode-txt-light transition-all duration-300"
                      placeholder="Enter new password"
                    >
                  </div>
                </div>
                <div class="mt-4">
                  <button type="button" class="px-6 py-3 rounded-md font-bold text-white bg-gradient-to-r from-blue-600 to-cyan-600 hover:from-blue-700 hover:to-cyan-700 transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-blue-500">
                    Update Password
                  </button>
                </div>
              </div>

              <div class="border-t border-txt-light dark:border-darkmode-txt-light border-opacity-20 pt-6">
                <div class="flex items-center justify-between">
                  <div>
                    <h3 class="font-semibold text-txt-p dark:text-darkmode-txt-p">Profile Visibility</h3>
                    <p class="text-sm text-txt-light dark:text-darkmode-txt-light">Make your profile visible to other users</p>
                  </div>
                  <label class="relative inline-flex items-center cursor-pointer">
                    <input type="checkbox" class="sr-only peer">
                    <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-purple-300 dark:peer-focus:ring-purple-800 rounded-full peer dark:bg-gray-700 peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all dark:border-gray-600 peer-checked:bg-purple-600"></div>
                  </label>
                </div>
              </div>
            </div>
          </div>

          <!-- Account Actions -->
          <div class="glass rounded-lg p-8 mb-8">
            <h2 class="text-h4 font-bold text-txt-p dark:text-darkmode-txt-p mb-6">Account Actions</h2>
            <div class="space-y-4">
              <div class="flex flex-col sm:flex-row gap-4">
                <button type="button" class="px-6 py-3 rounded-md font-bold text-white bg-gradient-to-r from-green-600 to-emerald-600 hover:from-green-700 hover:to-emerald-700 transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-green-500">
                  Export Data
                </button>
                <button type="button" class="px-6 py-3 rounded-md font-bold text-white bg-gradient-to-r from-yellow-600 to-orange-600 hover:from-yellow-700 hover:to-orange-700 transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-yellow-500">
                  Clear History
                </button>
                <button type="button" class="px-6 py-3 rounded-md font-bold text-white bg-gradient-to-r from-red-600 to-pink-600 hover:from-red-700 hover:to-pink-700 transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-red-500">
                  Delete Account
                </button>
              </div>
            </div>
          </div>

          <!-- Navigation -->
          <div class="text-center">
            <Button
              label="Back to Dashboard"
              link="/dashboard"
              type="secondary"
              glass={true}
            />
          </div>

        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<script>
  // Form submission handlers
  const profileForm = document.querySelector('form');
  profileForm?.addEventListener('submit', (e) => {
    e.preventDefault();
    alert('Profile updated successfully! (This is a demo)');
  });

  // Password change handler
  const passwordButton = document.querySelector('button[type="button"]:first-of-type');
  passwordButton?.addEventListener('click', () => {
    const currentPassword = document.getElementById('currentPassword')?.value;
    const newPassword = document.getElementById('newPassword')?.value;
    
    if (!currentPassword || !newPassword) {
      alert('Please fill in both password fields');
      return;
    }
    
    if (newPassword.length < 8) {
      alert('New password must be at least 8 characters long');
      return;
    }
    
    alert('Password updated successfully! (This is a demo)');
    
    // Clear password fields
    document.getElementById('currentPassword').value = '';
    document.getElementById('newPassword').value = '';
  });

  // Account action handlers
  const exportButton = document.querySelector('button:nth-of-type(3)');
  exportButton?.addEventListener('click', () => {
    alert('Data export started! (This is a demo)');
  });

  const clearButton = document.querySelector('button:nth-of-type(4)');
  clearButton?.addEventListener('click', () => {
    if (confirm('Are you sure you want to clear your history? This action cannot be undone.')) {
      alert('History cleared! (This is a demo)');
    }
  });

  const deleteButton = document.querySelector('button:nth-of-type(5)');
  deleteButton?.addEventListener('click', () => {
    if (confirm('Are you sure you want to delete your account? This action cannot be undone.')) {
      alert('Account deletion initiated! (This is a demo)');
    }
  });
</script>

<style>
  /* Custom focus states for inputs */
  input:focus {
    box-shadow: 0 0 0 2px rgba(147, 51, 234, 0.5);
  }
  
  /* Toggle switch styling */
  .peer:checked ~ div {
    background-color: #9333ea;
  }
  
  /* Hover effects for glass panels */
  .glass:hover {
    transform: translateY(-2px);
    transition: all 0.3s ease;
  }
</style>