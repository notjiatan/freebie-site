---
import BaseLayout from "@components/base/BaseLayout.astro";
---

<BaseLayout title="Community Chat">
  <div class="w-full h-screen relative">
    <iframe 
      src="https://revolt.chat/" 
      class="w-full h-full border-0 relative z-10"
      title="Revolt Chat"
      allow="microphone; camera; fullscreen">
    </iframe>
  </div>
</BaseLayout>

<style>
  /* Ensure flying lines appear behind iframe */
  .ring {
    z-index: 5 !important;
  }
</style>
