---

type Props = {
  collection?: string;
  pageIndex?: number;
  pageCount?: number;
  pageIDs?: string[];
};

const { collection, pageIndex = 1, pageCount = 1, pageIDs } = Astro.props;

let pageList: number[] = [];
for (let i = 1; i <= pageCount; i++) {
  pageList.push(i);
}

let prevPage: string | null;
let nextPage: string | null;

if (pageIDs) {
  prevPage =
    pageIndex > 0
      ? `${collection ? "/" + collection : ""}/${pageIDs[pageIndex - 1]}`
      : null;
  nextPage =
    pageIndex < pageCount - 1
      ? `${collection ? "/" + collection : ""}/${pageIDs[pageIndex + 1]}`
      : null;
} else {
  prevPage =
    pageIndex === 2
      ? `${collection ? "/" + collection : "/"}`
      : pageIndex > 2
        ? `${collection ? "/" + collection : ""}/page/${pageIndex - 1}`
        : null;
  nextPage =
    pageIndex < pageCount
      ? `${collection ? "/" + collection : ""}/page/${pageIndex + 1}`
      : null;
}
---

{
  pageCount > 1 && (
    <nav class="flex items-center justify-center pb-8">
      <div class="row glass rounded-md p-2 m-2 space-x-2 intersect:animate-fadeUp opacity-0">
        {/* previous */}
        {prevPage ? (
          <a
            href={prevPage}
            class="col rounded px-2 py-1.5 text-darkmode-txt-p"
            aria-label="Previous"
          >
            <svg className="inline-block w-4 h-4" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd"></path></svg>
          </a>
        ) : (
          <span
            class="col rounded px-2 py-1.5 text-darkmode-txt-light"
            aria-label="Previous"
          >
            <svg className="inline-block w-4 h-4" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd"></path></svg>
          </span>
        )}
        {/* page index */}
        {pageIDs ? (
          <div
            aria-current="page"
            class="col rounded px-4 py-2 text-darkmode-txt-p"
          >
            {pageIndex + 1}
          </div>
        ) : (
          pageList.map((pagination) =>
            pagination === pageIndex ? (
              <span
                aria-current="page"
                class="col rounded px-4 py-2 font-semibold text-darkmode-txt-p border border-darkmode-txt-light"
              >
                {pagination}
              </span>
            ) : (
              <a
                href={
                  pagination === 1
                    ? `${collection ? "/" + collection : "/"}`
                    : `${collection ? "/" + collection : ""}/page/${pagination}`
                }
                aria-current="page"
                class="col rounded px-4 py-2 font-semibold text-darkmode-txt-p"
              >
                {pagination}
              </a>
            )
          )
        )}

        {/* next page */}
        {nextPage ? (
          <a
            href={nextPage}
            class="col rounded px-2 py-1.5 text-darkmode-txt-p"
            aria-label="Next"
          >
            <svg className="inline-block w-4 h-4" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path></svg>
          </a>
        ) : (
          <span
            class="col rounded px-2 py-1.5 text-darkmode-txt-light"
            aria-label="Next"
          >
            <svg className="inline-block w-4 h-4" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path></svg>
          </span>
        )}
      </div>
    </nav>
  )
}
